local TabMisc     = main:AddTab("MISC")
local SecTeleport = TabMisc:AddSection({Title="Teleport"})
local SecWP       = TabMisc:AddSection({Title="Waypoint"})
local SecOtherM   = TabMisc:AddSection({Title="Other"})

-- Teleport to player
local playersOptions = {}
local selectedTPTarget = nil

local function refreshPlayersList()
    playersOptions = {}
    for _,plr in ipairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer then table.insert(playersOptions, plr.Name) end
    end
end
refreshPlayersList()

local ddTP = SecTeleport:AddDropdown("VSTAR_TPPlayer", {
    Title = "Pilih Player",
    Description = "",
    Options = playersOptions,
    Default = nil,
    PlaceHolder = "Select player",
    Multiple = false,
    Callback = function(name)
        selectedTPTarget = name
    end
})

SecTeleport:AddButton({
    Title = "Refresh Player",
    Callback = function()
        refreshPlayersList()
        -- re-create dropdown options (library-dependent; fallback: notify)
        notify("VSTAR","Player list refreshed",2)
    end
})

SecTeleport:AddButton({
    Title = "Teleport",
    Callback = function()
        if not selectedTPTarget then notify("VSTAR","Pilih player dulu",2) return end
        local plr = Players:FindFirstChild(selectedTPTarget)
        if plr and plr.Character then
            local target = getHRP(plr.Character)
            local me = getHRP(LocalPlayer.Character)
            if target and me then
                me.CFrame = target.CFrame + target.CFrame.LookVector * 2 + Vector3.new(0,3,0)
                notify("VSTAR","Teleported to "..selectedTPTarget,2)
            end
        end
    end
})

-- Waypoints: save current position, list, go, delete
local currentWPName = "WP-"..tostring(math.random(100,999))

SecWP:AddTextbox({
    Title="Nama Waypoint",
    Default=currentWPName,
    PlaceHolder="Masukkan nama waypoint",
    TextDisappear=false,
    Callback=function(v) currentWPName = tostring(v) end
})

local function getMyCFrame()
    local hrp = getHRP(LocalPlayer.Character)
    if hrp then return hrp.CFrame end
    return nil
end

SecWP:AddButton({
    Title="Simpan Posisi Sekarang",
    Callback=function()
        local cf = getMyCFrame()
        if cf then
            table.insert(waypoints, {name=currentWPName, cframe=cf})
            notify("VSTAR","Waypoint saved: "..currentWPName,2)
        end
    end
})

SecWP:AddButton({
    Title="List Waypoints (console)",
    Callback=function()
        for i,w in ipairs(waypoints) do
            rconsoleprint(("[%d] %s\n"):format(i, w.name))
        end
        notify("VSTAR","Tampilkan list di console (rconsole)",3)
    end
})

SecWP:AddButton({
    Title="Teleport ke Waypoint (terakhir disimpan)",
    Callback=function()
        if #waypoints == 0 then notify("VSTAR","Belum ada waypoint",2) return end
        local last = waypoints[#waypoints]
        local me = getHRP(LocalPlayer.Character)
        if me and last.cframe then
            me.CFrame = last.cframe
            notify("VSTAR","Teleported to "..last.name,2)
        end
    end
})

SecWP:AddButton({
    Title="Hapus Waypoint Terakhir",
    Callback=function()
        if #waypoints > 0 then
            local removed = table.remove(waypoints, #waypoints)
            notify("VSTAR","Deleted: "..removed.name,2)
        else
            notify("VSTAR","Tidak ada waypoint",2)
        end
    end
})

SecWP:AddButton({
    Title="Hapus Semua Waypoint",
    Callback=function()
        waypoints = {}
        notify("VSTAR","All waypoints cleared",2)
    end
})

-- Other: Chat Spy (basic)
local chatSpyEnabled = false
SecOtherM:AddToggle("VSTAR_ChatSpy", { Title="Chat Spy (basic)", Default=false, Callback=function(s)
    chatSpyEnabled = s
    if s then
        notify("VSTAR","ChatSpy ON (lihat console)",3)
    else
        notify("VSTAR","ChatSpy OFF",2)
    end
end})

-- Attempt hook to default chat events
task.spawn(function()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local ok, events = pcall(function()
        return ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents", 5)
    end)
    if ok and events then
        local OnMessage = events:FindFirstChild("OnMessageDoneFiltering")
        if OnMessage and OnMessage.OnClientEvent then
            OnMessage.OnClientEvent:Connect(function(tab, channel)
                if chatSpyEnabled and tab and tab.FromSpeaker and tab.Message then
                    rconsoleprint(("[%s] %s: %s\n"):format(channel or "Chat", tab.FromSpeaker, tab.Message))
                end
            end)
        end
    end
end)

